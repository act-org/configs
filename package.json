{
  "author": "Jon Cursi <jon.cursi@act-et.org>",
  "bugs": {
    "email": "jon.cursi@act-et.org",
    "url": "https://github.com/act-org/eslint-config/issues"
  },
  "contributors": [
    "Jon Cursi <jon.cursi@act-et.org>",
    "Adam Weeden <adam.weeden@encoura.org>"
  ],
  "dependencies": {
    "@commitlint/cli": "17.0.3",
    "@commitlint/config-conventional": "17.0.3",
    "markdownlint-cli": "0.31.1",
    "npm-run-all": "4.1.5"
  },
  "description": "ACT's preferred configs for TypeScript, Prettier, ESLint, CommitLint, and MarkdownLint.",
  "devDependencies": {
    "@actinc/eslint-plugin": "file:./packages/eslint-plugin",
    "@actinc/prettier-config": "file:./packages/prettier-config",
    "@actinc/typescript-config": "file:./packages/typescript-config",
    "@types/eslint": "^8.4.5",
    "@types/prettier": "^2.6.3",
    "eslint": "^8.20.0",
    "husky": "^8.0.0",
    "jest": "28.1.3",
    "lerna": "^5.1.8",
    "lint-staged": "13.0.3",
    "nx": "^14.4.3",
    "prettier": "^2.7.1",
    "standard-version": "^9.5.0",
    "typescript": "^4.7.4"
  },
  "eslintConfig": {
    "extends": "plugin:@actinc/typescript",
    "plugins": ["@actinc"]
  },
  "homepage": "https://github.com/act-org/eslint-config#readme",
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "keywords": [
    "commitlint",
    "eslint",
    "eslint-config",
    "markdownlint",
    "prettier",
    "typescript"
  ],
  "license": "MIT",
  "lint-staged": {
    "*.{js,json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.{js}": "npm run test:lint:js",
    "*.{md}": "npm run test:lint:md"
  },
  "main": "index.js",
  "name": "@actinc/config-monorepo",
  "prettier": "@actinc/prettier-config",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/act-org/eslint-config.git"
  },
  "scripts": {
    "release": "np",
    "test": "npm-run-all test:**",
    "test:lint:js": "eslint . --ext .js --quiet",
    "test:lint:md": "markdownlint README.md --config markdownlint.config.json",
    "prepare": "husky install"
  },
  "version": "4.0.0"
}
